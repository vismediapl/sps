[start:login]<form action="{spath}" method="post" id="login">
<p>
<span>
<input type="password" name="Password" id="pass" tabindex="{tindex}" /><br />
</span>
<label for="pass">%pass%</label>:
</p>
<p>
<span>
<input type="checkbox" name="Remember" id="remember" tabindex="{tindex}" /><br />
</span>
<label for="remember">%remember%</label>:
</p>
<div>
<input type="submit" value="%loginto%" tabindex="{tindex}" class="button" />
</div>
</form>
[/end]